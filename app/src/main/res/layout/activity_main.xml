<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_aplikasi"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_person" />

        <TextView
            android:id="@+id/tvHalo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imgProfile"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imgProfile"
            android:fontFamily="@font/cavilant"
            android:text="@string/halo"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHalo"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/imgProfile"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/pebri_andriansyah"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnlightkroast"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="165dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_medium"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/light_roast"
            android:textAllCaps="true"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnmediumRoast"
            android:layout_width="0dp"
            android:layout_height="165dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_medium"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/medium_roast"
            android:textAllCaps="true"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btndarkRoast"
            android:layout_width="0dp"
            android:layout_height="165dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_medium"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/dark_roast"
            android:textAllCaps="true"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnmanualRoast"
            android:layout_width="0dp"
            android:layout_height="165dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_medium"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/manual_roast"
            android:textAllCaps="true"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>

