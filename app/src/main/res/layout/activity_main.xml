<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".InfoAplikasiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_bacground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_baseline_person_24"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Halo"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pebri Adriansyah"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:id="@+id/btnlightroast"
            android:text="@string/light_roast"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/buttonlightroast"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:id="@+id/btnmediumroast"
            android:text="@string/medium_roast"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/buttonmediumroast"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:id="@+id/btndarkroast"
            android:text="@string/dark_roast"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/buttondarkroast"/>
    </LinearLayout>
</LinearLayout>